<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverInformationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textStyle="bold"
        android:textSize="35sp"
        android:gravity="start"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp">
    </TextView>
    <androidx.cardview.widget.CardView
        android:id="@+id/imgdriverinfomationcard"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="250dp"
        android:layout_gravity="center">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/driverinformationimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/chicken_roll" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/drivername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver name:"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="start"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:layout_marginStart="18dp">
    </TextView>

    <TextView
        android:id="@+id/drivernameinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John"
        android:textSize="25sp"
        android:gravity="start"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="18dp">
    </TextView>

    <TextView
        android:id="@+id/drivercarmodel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car model:"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="start"
        android:textColor="@color/black"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp">
    </TextView>

    <TextView
        android:id="@+id/drivercarmodelinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yellow Corolla"
        android:textSize="25sp"
        android:gravity="start"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="18dp">
    </TextView>

    <TextView
        android:id="@+id/drivercarplate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Plate:"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="start"
        android:textColor="@color/black"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp">
    </TextView>

    <TextView
        android:id="@+id/drivercarplateinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="51k-99999"
        android:textSize="25sp"
        android:gravity="start"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="18dp">
    </TextView>

    </LinearLayout>
</ScrollView>